{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "lib": ["ES2021", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "outDir": "dist",
    "types": ["node", "@cucumber/cucumber"]
  },
  "include": [
    "step_definitions/**/*.ts",
    "support/**/*.ts",
    "pages/**/*.ts",
    "helpers/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
